@model ReviewProj.WebUI.Models.ProfileViewModel

@{
    ViewBag.Title = "Edit Profile";
}

@using (Html.BeginForm("EditResult", "Profile"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => Model.Nationality, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(mod => Model.Nationality, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(mod => Model.BirthDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(mod => Model.BirthDate, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" name="option" value="@Resources.Resource.SaveBtnKey" />
                <input type="submit" name="option" value="@Resources.Resource.CancelKey" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(Resources.Resource.BackToMyProfileKey, "Index")
</div>



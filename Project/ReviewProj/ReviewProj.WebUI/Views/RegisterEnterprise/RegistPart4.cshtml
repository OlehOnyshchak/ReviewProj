@model ReviewProj.WebUI.Models.EnterpriseView
@{
    ViewBag.Title = "RegistPart4";
}

<h2>Add Description</h2>

@using (Html.BeginForm("RegistPart4", "RegisterEnterprise", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Description, 15, 40, null)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Back", "RegistPart3", "RegisterEnterprise", null, new { @class = "btn btn-default" })
                <input type="submit" value="Done" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
